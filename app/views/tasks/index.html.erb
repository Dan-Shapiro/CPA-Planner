<h1>Tasks</h1>

<table class="table">
  <thead>
    <tr>
      <th class="text-center">Name</th>
      <th class="text-center">Start date</th>
      <th class="text-center">End date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.start_date %></td>
        <td><%= task.end_date %></td>
        <td><%= link_to 'Show', task, class: "btn btn-default btn-sm" %></td>
        <td><%= link_to 'Edit', edit_task_path(task), class: "btn btn-default btn-sm" %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= month_calendar events: @tasks, attribute: :start_date, end_attribute: :end_date do |date, tasks| %>
  <%= date.day %><br>

  <% tasks.each do |task| %>
    <% num_days = (task.end_date - task.start_date + 1).to_i %>
    <% days_arr = [] %>
    <% first_available_day = 0 %>
    <% num_days.times do %>
      <% days_arr.push([]) %>
    <% end %>

    <% total_minutes = 0 %>
    <% task.parts.each do |part| %>
      <% total_minutes += (part.hours * 60) + part.minutes %>
    <% end %>
    <% minutes_per_day = (total_minutes.to_f / num_days.to_f).round %>
    <% time_left_in_day = minutes_per_day %>

    <% parts = task.parts %>

    <% curr_minute_count = 0 %>
    <% minutes_counted = minutes_per_day %>
    <% while parts.count > 0 %>
      <% part = parts.first %>
      <% days_arr[first_available_day].push(part) if days_arr.count > first_available_day %>
      <% if curr_minute_count < minutes_counted %>
        <% curr_minute_count += part.hours * 60 + part.minutes %>
      <% end %>
      <% if part.hours * 60 + part.minutes >= time_left_in_day %>
        <% first_available_day += 1 %>
        <% time_left_in_day = minutes_per_day %>
        <% minutes_counted += minutes_per_day %>
      <% else %>
        <% time_left_in_day -= (part.hours * 60 + part.minutes) %>
      <% end %>
      <% if curr_minute_count < minutes_counted %>
        <% parts = parts.drop(1) %>
      <% end %>
    <% end %>

    <% days_from_start = (date - task.start_date).to_i %>
    <% days_arr[days_from_start] = days_arr[days_from_start] || [] %>
    <% days_arr[days_from_start].each do |p| %>

      <%= link_to "#{p.chapter}>#{p.module}>#{p.name}:#{p.hours*60 + p.minutes}#{p.completed ? ' | DONE' : ''}", task_part_path(task, p), class: "btn btn-default btn-xs cal-content" %>
    <% end %>
  <% end %>
<% end %>

<br>

<%= link_to 'New Task', new_task_path, class: "btn btn-primary btn-xl page-scroll" %>
